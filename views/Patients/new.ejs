<%include ../Extra/Partials/header.ejs%>

<div class="container">

    <br>
    <form action="/patients/new" method="post" >
        <div class="form-group col-md-9 col-md-offset-2"
            <label for="dateOfAdmission">Date of Admission:</label>
            <input type="date" name="dateOfAdmission">
        </div>
        <div class="form-group col-md-10 col-md-offset-2">
            <label for="fName">First Name:</label>
            <input type="text" name="fName" required>
            <label for="mName">Middle Name:</label>
            <input type="text" name="mName" required>
            <label for="lName">Last Name:</label>
            <input type="text" name="lName" required>
        </div>
        <div class="form-group col-md-10 col-md-offset-2">
            <label for="dateOfBirth">Date of Birth:</label>
            <input type="date" name="dateOfBirth">
            <br>
            <label for="mob1">Mobile1: </label>
            <input type="number" name="mob1">
            <label for="mob2">Mobile2:</label>
            <input type="number" name="mob2">
            <label for="email">E-mail:</label>
            <input type="email" name="email">

        </div>


        <div class="form-group col-md-9 col-md-offset-2">
            <br>
            <label for="pre" class="btn-light">Present Address</label>
            <br>
            <label for="presSt">Street No./Village: </label>
            <input type="text" name="presSt" required>
            <label for="presStName">Street Name:</label>
            <input type="text" name="presStName" required>
            <label for="presArea">Area:</label>
            <input type="text" name="presArea" required>
            <label for="presThana">Thana:</label>
            <input type="text" name="presThana" required>
            <label for="presDist">District:</label>
            <input type="text" name="presDist" required>

        </div>

        <div class="form-group col-md-9 col-md-offset-2">

            <label for="perm" class="btn-light">Permanent Address</label>
            <br>
            <label for="permSt">Street No./Village: </label>
            <input type="text" name="permSt">
            <label for="permStName">Street Name:</label>
            <input type="text" name="permStName">
            <label for="permArea">Area:</label>
            <input type="text" name="permArea">
            <label for="permThana">Thana:</label>
            <input type="text" name="permThana">
            <label for="permDist">District:</label>
            <input type="text" name="permDist">
        </div>

        <br>
        <div class="form-group col-md-10 col-md-offset-2">
            <label for="profession">Profession</label>
            <select name="profession" id="">
                <option value="Government job">Government job</option>
                <option value="Private Job">Private Job</option>
                <option value="Business">Business</option>
                <option value="Farmer">Farmer</option>
                <option value="Retired ">Retired </option>
                <option value="Others">Others</option>
            </select>
        </div>
        <br>
        <div class="form-group col-md-9 col-md-offset-2">
            <label for="dipoAmount">Amount Diposited: </label>
            <input type="number" name="depositedAmount">
        </div>

        <div class="form-group col-md-4 col-md-offset-3">
            <br><br><br>
            <p>Signature with date</p>
            <label for="depositorName:">Depositor Name</label>
            <input type="text" name="depositorName">
            <label for="depositorsRel">Relation with the Patient</label>
            <input type="text" name="depositorsRel">
            <br>
            <label for="contactPerson">Contact Person</label>
            <input type="text" name="contactPerson">
        </div>
        <input type="submit" class="btn-success form-group col-md-2 col-md-offset-5">
    </form>

</div>


<%include ../Extra/Partials/footer.ejs%>
